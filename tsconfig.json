{
  "compilerOptions": {
    // ESM en Node
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Nivel de JavaScript moderno compatible en Vercel
    "target": "ES2022",
    "lib": ["ES2022"],

    // Paths de compilaci√≥n para TU app (no para /api)
    "rootDir": "src",
    "outDir": "dist",

    // Calidad de tipos
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    // Calidad de build
    "noEmitOnError": true,
    "sourceMap": true,
    "skipLibCheck": true,

    // Compatibilidad de imports
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Tipos de Node
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "api"]
}

